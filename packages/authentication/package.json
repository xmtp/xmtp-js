{
  "name": "xmtp-client-auth",
  "version": "0.1.0",
  "description": "Wallet-based authentication for interacting with the XMTP protocol",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "type-check:watch": "pnpm type-check -- --watch",
    "build": "pnpm clean && pnpm build:types && pnpm build:cjs && pnpm build:esm",
    "build:types": "rimraf dist/types && tsc --emitDeclarationOnly",
    "build:cjs": "rimraf dist/cjs && BABEL_ENV=cjs babel src --out-dir dist/cjs --extensions \".ts,.js\" --source-maps inline",
    "build:esm": "rimraf dist/esm && BABEL_ENV=esm babel src --out-dir dist/esm --extensions \".ts,.js\" --source-maps inline",
    "test": "mocha -r ts-node/register test/*.ts",
    "coverage": "nyc npm run test"
  },
  "keywords": [
    "xmtp",
    "web3",
    "authentication",
    "web3",
    "messaging",
    "wallet",
    "authentication"
  ],
  "author": "XMTP",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.16.7",
    "@babel/core": "^7.16.7",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@ethersproject/providers": "^5.5.2",
    "@metamask/detect-provider": "^1.2.0",
    "@walletconnect/client": "^1.7.0",
    "@walletconnect/web3-provider": "^1.7.0",
    "babel-plugin-inline-dotenv": "^1.6.0",
    "walletlink": "^2.4.0"
  }
}
