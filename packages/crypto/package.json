{
  "name": "xmtp-client-crypto",
  "version": "0.1.0",
  "description": "Crypto classes and utilities for use in XMTP client libraries",
  "main": "lib/index.js",
  "module": "src/index.ts",
  "types": "./types/index.d.ts",
  "scripts": {
    "clean": "rimraf lib && rimraf types",
    "type-check": "tsc --noEmit",
    "type-check:watch": "pnpm type-check -- --watch",
    "build": "pnpm clean && pnpm build:types && pnpm build:js && pnpm build:proto",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir lib --extensions \".ts,.js\" --source-maps inline",
    "build:proto": "buf generate",
    "test": "ts-mocha test/*.ts",
    "coverage": "nyc npm run test"
  },
  "keywords": [
    "xmtp",
    "web3",
    "web3 messaging",
    "messaging",
    "wallet messaging"
  ],
  "author": "XMTP",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.16.7",
    "@babel/core": "^7.16.7",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@types/mocha": "^9.0.0",
    "chai": "^4.3.4",
    "mocha": "^9.1.3",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "ts-mocha": "^9.0.2",
    "ts-proto": "^1.102.2",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@noble/hashes": "^1.0.0",
    "@noble/secp256k1": "^1.4.0",
    "protobufjs": "^6.11.2"
  }
}
