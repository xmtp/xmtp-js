{
  "name": "@xmtp/cli",
  "version": "0.0.4",
  "description": "A command-line interface for XMTP.",
  "repository": {
    "type": "git",
    "url": "git+https://git@github.com/xmtp/xmtp-js.git",
    "directory": "packages/xmtp-cli"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/lib.d.ts",
      "default": "./dist/lib.js"
    }
  },
  "main": "dist/lib.js",
  "types": "dist/lib.d.ts",
  "bin": {
    "xmtp": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn clean:dist && npx rollup -c && chmod +x dist/index.js",
    "clean": "rimraf .turbo && rimraf node_modules && yarn clean:dist",
    "clean:dist": "rimraf dist",
    "dev": "tsx --watch index.ts",
    "format": "cd ../.. && yarn build && yarn format packages/xmtp-cli",
    "link": "yarn build && yarn link",
    "lint": "cd ../.. && yarn eslint packages/xmtp-cli",
    "start": "tsx index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "unlink": "yarn unlink"
  },
  "dependencies": {
    "@xmtp/agent-sdk": "1.1.16",
    "@xmtp/content-type-markdown": "^1.0.0",
    "@xmtp/content-type-reaction": "^2.0.2",
    "@xmtp/content-type-read-receipt": "^2.0.2",
    "@xmtp/content-type-remote-attachment": "^2.0.2",
    "@xmtp/content-type-reply": "^2.0.2",
    "@xmtp/content-type-text": "^2.0.2",
    "@xmtp/content-type-transaction-reference": "^2.0.2",
    "@xmtp/content-type-wallet-send-calls": "^2.0.0",
    "@xmtp/node-sdk": "4.4.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/node": "^24.9.1",
    "@types/yargs": "^17.0.33",
    "rimraf": "^6.0.1",
    "rollup": "^4.52.5",
    "rollup-plugin-dts": "^6.2.3",
    "rollup-plugin-tsconfig-paths": "^1.5.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=22"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true,
    "registry": "https://registry.npmjs.org/"
  }
}
