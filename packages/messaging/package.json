{
  "name": "xmtp-client-messaging",
  "version": "0.1.0",
  "description": "Client API supporting asynchronous messaging operations across the XMTP network",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "clean": "rimraf dist && pnpm run clean:proto",
    "clean:proto": "rimraf src/protos/*.ts",
    "type-check": "tsc --noEmit",
    "type-check:watch": "pnpm type-check -- --watch",
    "build": "pnpm clean && pnpm build:proto && pnpm build:types && pnpm build:cjs && pnpm build:esm",
    "build:types": "rimraf dist/types && tsc --emitDeclarationOnly",
    "build:cjs": "rimraf dist/cjs && BABEL_ENV=cjs babel src --out-dir dist/cjs --extensions \".ts,.js\" --source-maps inline",
    "build:esm": "rimraf dist/esm && BABEL_ENV=esm babel src --out-dir dist/esm --extensions \".ts,.js\" --source-maps inline",
    "build:proto": "pnpm run clean:proto && buf generate",
    "test": "mocha -r ts-node/register test/*.ts test/**/*.ts",
    "lint": "prettier --check . && eslint .",
    "autolint": "prettier --write . && eslint --fix .",
    "coverage": "nyc npm run test"
  },
  "keywords": [
    "xmtp",
    "web3",
    "web3 messaging",
    "messaging",
    "wallet messaging"
  ],
  "author": "XMTP",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.16.7",
    "@babel/core": "^7.16.7",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "ts-proto": "^1.102.2",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "js-waku": "^0.14.2",
    "node-fetch": "^3.1.0",
    "@noble/hashes": "^1.0.0",
    "@noble/secp256k1": "^1.4.0",
    "ethers": "^5.5.2",
    "protobufjs": "^6.11.2"
  }
}
