generator client {
  provider = "prisma-client-js"
}

generator zod {
  provider = "zod-prisma-types"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Platform {
  ens
  basenames
  farcaster
  unknown
}

model Profile {
  id          String   @id @default(uuid())
  address     String
  identity    String   @unique
  platform    Platform
  displayName String?
  email       String?
  location    String?
  status      String?
  avatar      String?
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
