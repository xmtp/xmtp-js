    "uuid": "^11.0.5",
    "viem": "^2.23.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@bufbuild/buf": "^1.50.0",
    "@bufbuild/protoc-gen-es": "^2.2.3",
    "@types/bun": "^1.2.1",
    "@types/cors": "^2.8.17",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^5.0.0",
    "@types/mime-types": "^2.1.4",
    "@types/uuid": "^10.0.0",
