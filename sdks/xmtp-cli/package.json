{
  "name": "@xmtp/cli",
  "version": "0.0.1",
  "description": "XMTP CLI - Manage XMTP protocol operations",
  "type": "module",
  "bin": {
    "xmtp-cli": "./bin/xmtp-cli.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "yarn clean:dist && tsc -p tsconfig.build.json",
    "clean": "rimraf .turbo && rimraf node_modules && yarn clean:dist",
    "clean:dist": "rimraf dist",
    "dev": "tsx --watch index.ts",
    "start": "tsx index.ts",
    "send": "tsx commands/send.ts",
    "permissions": "tsx commands/permissions.ts",
    "groups": "tsx commands/groups.ts",
    "list": "tsx commands/list.ts",
    "debug": "tsx commands/debug.ts",
    "content": "tsx commands/content-types.ts",
    "lint": "cd ../.. && yarn eslint sdks/xmtp-cli",
    "format": "cd ../.. && yarn build && yarn format sdks/xmtp-cli",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@xmtp/agent-sdk": "workspace:*",
    "@xmtp/content-type-markdown": "workspace:*",
    "@xmtp/content-type-reaction": "workspace:*",
    "@xmtp/content-type-remote-attachment": "workspace:*",
    "@xmtp/content-type-reply": "workspace:*",
    "@xmtp/content-type-text": "workspace:*",
    "@xmtp/content-type-wallet-send-calls": "workspace:*",
    "commander": "^14.0.2"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "packageManager": "yarn@4.5.0",
  "engines": {
    "node": ">=20"
  }
}
