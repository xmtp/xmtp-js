{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "Node18",
    "noUncheckedIndexedAccess": true,
    "outDir": "dist",
    "paths": {
      "@/*": ["./src/*"],
      "@test/*": ["./test/*"],
      "@/inline-actions": ["./src/content-types/inline-actions/index.js"]
    },
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "types": ["node", "vitest/globals"]
  },
  "include": ["src/**/*", "vitest.config.ts"]
}
