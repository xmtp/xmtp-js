{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "lib": [
      "DOM",
      "ES2018",
      "ES2019",
      "ES2020",
      "ESNext"
    ],
    "preserveConstEnums": true,
    "incremental": false,
    "declaration": true,
    "sourceMap": true,
    "importHelpers": true,
    "strict": true,
    "pretty": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "typeRoots": [
    "./node_modules/@types",
    "./packages/messaging/node_modules/@types",
    "./packages/messaging/src/types"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/**",
    "**/dist/**",
    "**/lib/**",
    "**/test/**"
  ]
}
