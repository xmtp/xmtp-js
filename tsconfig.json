{
  "compilerOptions": {
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom"],
    "moduleResolution": "bundler",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2021",
    "types": ["vitest/globals"]
  },
  "include": [
    "src/**/*",
    "bench/**/*",
    "build/**/*",
    "test/**/*",
    ".eslintrc.cjs",
    "commitlint.config.cjs",
    "rollup.config.bench.js",
    "rollup.config.js",
    "vitest.config.ts"
  ]
}
