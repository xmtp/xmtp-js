{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "extends": [
    "eslint:recommended",
    "standard",
    "prettier",
    "plugin:@typescript-eslint/recommended",
    "eslint-config-prettier"
  ],
  "plugins": ["@typescript-eslint"],
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "ignorePatterns": ["dist", "node_modules", "examples", "scripts", "lib", "types"]
}
